@model List<CQRSDesignPat.CQRSDesignPat.Result.GetAllProductQueryResult>
@{
    Layout = null;
}

<div class="container">
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Ürün adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>ID ye göre getir</th>

        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ID</td>
                <td>@item.ProductName</td>
                <td>@item.Price ₺</td>
                <td>@item.Stock</td>
                <td>
                    <a href="/Default/DeleteProduct/@item.ID" class="btn btn-outline-danger">SİL</a>
                </td>
                <td>
                    <a href="/Default/UpdateProduct/@item.ID" class="btn btn-outline-warning">GÜNCELLE</a>
                </td>
                <td>
                    <a href="/Default/GetProduct/@item.ID" class="btn btn-outline-warning">Getir</a>
                </td>
              
            </tr>
        }
    </table>
    <a href="/Default/AddProduct/" class="btn btn-outline-success">YENİ ÜRÜN GİRİŞİ</a>
</div>

<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />